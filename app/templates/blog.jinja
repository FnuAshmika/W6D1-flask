{% extends "base.jinja" %}
{% block content %}
    <h2>Blog Page</h2>
    <form action="" method="post">
        {{ blog_form.hidden_tag() }}
        <p>
            {{ blog_form.title.label }}<br>
            {{ blog_form.title(size=50)}}
        </p>
        <p>
            {{ blog_form.blog.label }}<br>
            {{ blog_form.blog(cols=50, rows=10)}}
        </p>
        <p>{{ blog_form.submit(class='btn btn-success') }}</p>
    </form>    
{% endblock %}